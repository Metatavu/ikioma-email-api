<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <changeSet id="prescriptionrenewals" author="Katja Danilova">
        <createTable tableName="prescriptions">
            <column name="id" type="binary(16)">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="Prescription" type="varchar(100)">
                <constraints nullable="false" primaryKey="true"/>
            </column>
        </createTable>

        <createTable tableName="prescriptionrenewal">
            <column name="id" type="binary(16)">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="transactionid" type="varchar(100)"/>
            <column name="practitioneruserid" type="binary(16)">
                <constraints nullable="false"/>
            </column>
            <column name="paymenturl" type="varchar(100)"/>
            <column name="paymentstatus" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="createdat" type="datetime(6)">
                <constraints nullable="false"/>
            </column>
            <column name="modifiedat" type="datetime(6)">
                <constraints nullable="false"/>
            </column>
            <column name="creatorid" type="binary(16)">
                <constraints nullable="false"/>
            </column>
            <column name="lastmodifierid" type="binary(16)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="referenceno" author="Katja Danilova">
        <addColumn tableName="prescriptionrenewal">
            <column name="stamp" type="binary(16)">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <addColumn tableName="prescriptionrenewal">
            <column name="checkoutaccount" type="bigint">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="columnnameformats" author="Katja Danilova">
        <renameColumn tableName="prescriptions" oldColumnName="Prescription" columnDataType="varchar(100)" newColumnName="prescriptionname"/>
        <modifyDataType tableName="prescriptions" columnName="prescriptionname" newDataType="varchar(500)"/>
    </changeSet>

    <changeSet id="prescriptionprice" author="Katja Danilova">
        <addColumn tableName="prescriptionrenewal">
            <column name="price" type="int">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>